@model StoreFront6.DATA.EF.Fit
@using (Html.BeginForm("AjaxEdit", "Fits", FormMethod.Post, new { id = "FitEditForm" }))
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            @Html.HiddenFor(model => model.FitID)
            <td>@Html.EditorFor(model => model.FitName, new { htmlAttributes = new { @class = "form-control", style = "width: 400px;" } })
            @Html.ValidationMessageFor(model => model.FitName, "", new { @class = "text-danger"})
            </td>
            <td>
                <input type="button" id="saveUpdate" value="Update Fit" class="btn btn-info"/>
            </td>
        </tr>
       
    </table>
    <div>
        @Html.ActionLink("Cancel", "Index")
    </div>
}
