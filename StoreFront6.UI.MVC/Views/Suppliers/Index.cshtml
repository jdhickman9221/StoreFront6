@model IEnumerable<StoreFront6.DATA.EF.Supplier>

@{
    ViewBag.Title = "Our Suppliers";
}




@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table d-flex justify-content-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
           @Html.DisplayNameFor(model => model.Phone)
            
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            <a href="tel:+01-@Html.DisplayNameFor(model => model.Phone)">
                @Html.DisplayFor(modelItem => item.Phone)</a>
        </td>
        @*<td>
            @Html.ActionLink("Details", "Details", new { id = item.SupplierID })
        </td>*@
        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SupplierID }, new { @class = "btn btn-default" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.SupplierID }, new { @class = "btn btn-default" })
            </td>
        }


    </tr>
    }

</table>
